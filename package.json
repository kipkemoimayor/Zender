{
  "name": "offer-letters",
  "description": "offer leters",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "Collins Kipkemoi"
  },
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": ">= 16.20.0"
  },
  "feathers": {
    "language": "ts",
    "packager": "npm",
    "database": "mysql",
    "framework": "express",
    "transports": [
      "rest",
      "websockets"
    ],
    "schema": "typebox"
  },
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "lib/client.js",
    "lib/**/*.d.ts",
    "lib/**/*.shared.js"
  ],
  "main": "lib/client",
  "scripts": {
    "dev": "nodemon -x ts-node src/index.ts",
    "compile": "shx rm -rf lib/ && tsc",
    "start": "node lib/",
    "prettier": "npx prettier \"**/*.ts\" --write",
    "mocha": "cross-env NODE_ENV=test mocha test/ --require ts-node/register --recursive --extension .ts --exit",
    "test": "cross-env NODE_ENV=test npm run migrate && npm run mocha",
    "bundle:client": "npm run compile && npm pack --pack-destination ./public",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^5.0.8",
    "@feathersjs/authentication": "^5.0.11",
    "@feathersjs/authentication-client": "^5.0.8",
    "@feathersjs/authentication-local": "^5.0.11",
    "@feathersjs/authentication-oauth": "^5.0.11",
    "@feathersjs/configuration": "^5.0.8",
    "@feathersjs/errors": "^5.0.8",
    "@feathersjs/express": "^5.0.8",
    "@feathersjs/feathers": "^5.0.8",
    "@feathersjs/knex": "^5.0.8",
    "@feathersjs/schema": "^5.0.8",
    "@feathersjs/socketio": "^5.0.8",
    "@feathersjs/transport-commons": "^5.0.8",
    "@feathersjs/typebox": "^5.0.8",
    "compression": "^1.7.4",
    "date-format": "^4.0.14",
    "docxtemplater": "^3.37.13",
    "dotenv": "^16.3.1",
    "feathers-hooks-common": "^8.1.1",
    "handlebars": "^4.7.8",
    "html-pdf-node": "^1.0.8",
    "knex": "^2.5.1",
    "libreoffice-convert": "^1.4.1",
    "mysql": "^2.18.1",
    "node-schedule": "^2.1.1",
    "pizzip": "^3.1.4",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xlsx-template": "^1.4.3"
  },
  "devDependencies": {
    "@feathersjs/cli": "^5.0.8",
    "@feathersjs/rest-client": "^5.0.8",
    "@types/html-pdf-node": "^1.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.0",
    "@types/uuid": "^9.0.2",
    "axios": "^1.4.0",
    "cross-env": "^7.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "nodemonConfig": {
    "ignore": [
      "**/public/**",
      "**/test/**"
    ],
    "delay": 100
  }
}
